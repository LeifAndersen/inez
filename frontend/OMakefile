.PHONY: clean

clean:
    rm -f *.o *.cm[iox] smtlib_lexer.ml inez inez.opt inez.run	\
            inez.top *.omc scip_idl.ml scip_idl.mli scip_idl.h	\
            scip_idl_stubs.c
