#use "topfind";;
#require "core";;

module S = Solver.Make(Scip);;
module Formula = struct
  include Lang_types;;
  include Lang_abstract;;
end;;

open Core.Std;;

let ctx = S.make_ctx ();;

let iassert g = S.assert_formula ctx g;;
let solve () = S.solve ctx;;
let ifv () = Formula.M_Ivar (S.new_ivar ctx);;
let bfv () = Formula.F_Atom (Formula.A_Bvar (S.new_bvar ctx));;
